echo :+ 17 day
date -v+17d $F

echo :+ 17 d
date -v+17d $F

echo :- 4 months
date -v-4m $F

echo :- 4 month
date -v-4m $F

echo :- 4 m
date -v-4m $F

echo :+ 2 weeks
date -v+14d $F

echo :+ 2 week
date -v+14d $F

echo :+ 2 w
date -v+14d $F

echo :- 1 years
date -v-1y $F

echo :- 1 year
date -v-1y $F

echo :- 1 y
date -v-1y $F

